<footer>
    <div class="container">
        <div class="row">
            {% if informations %}
                <div class="col-sm-3">
                    <h4>{{ text_information }}</h4>
                    <ul class="list-unstyled">
                        <li><a href="{{ contact }}">{{ text_contact }}</a></li>
                        <li><a href="{{ contact }}">{{ text_faq }}</a></li>
                        {% for information in informations %}
                            <li><a href="{{ information.href }}">{{ information.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="col-sm-3">
                <h4>{{ text_service }}</h4>
                <ul class="list-unstyled">
                    <li><a href="{{ return }}">{{ text_return }}</a></li>
                </ul>
            </div>
            <div class="col-sm-3">
                <h4>{{ text_buy_shoes }}</h4>
                <ul class="list-unstyled">
                    <li><img class="terms" src="catalog/view/theme/default/image/trans.png"
                             style="margin-right: 5px;width: 15px"><a
                                href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>
                    <li><img class="terms" src="catalog/view/theme/default/image/reset.png"><a
                                href="{{ voucher }}">{{ text_voucher }}</a></li>
                    <li><img class="terms" src="catalog/view/theme/default/image/calendar.png"><a
                                href="{{ affiliate }}">{{ text_affiliate }}</a></li>
                </ul>
            </div>
            <div class="col-sm-3">
                <h4>{{ text_account }}</h4>
                <ul class="list-unstyled">
                    <li>
                        <div class="input-field"><input class="field-input" type="text" placeholder="Nom"></div>
                    </li>
                    <li>
                        <div class="input-field"><input class="field-input" type="email" placeholder="Email"></div>
                    </li>
                    <li>
                        <button type="submit" class="btn btn-pink">Abonnez-vous</button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <h4>{{ text_delivery }}</h4>
                <ul class="list-unstyled">
                    <li class="livraison">
                        <img src="catalog/view/theme/default/image/amana.png">
                    </li>
                </ul>
            </div>
            <div class="col-sm-3">
                <h4>MOYENNE DE PAYEMENTS</h4>
                <ul class="list-unstyled payment">
                    <li>
                        <img src="catalog/view/theme/default/image/mastercard.png">
                        <img src="catalog/view/theme/default/image/visa.png">
                    </li>
                    <li>
                        <img src="catalog/view/theme/default/image/paypal.png">
                        <img src="catalog/view/theme/default/image/livraison.png">
                    </li>
                </ul>
            </div>
            <div class="col-sm-3">
                <h4>CONNECTER AVEC NOUS</h4>
                <ul class="list-unstyled social">
                    <img src="catalog/view/theme/default/image/face.png">
                    <img src="catalog/view/theme/default/image/insta.png" style="margin-left: 15px;">
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <span><a href="{{ motion_legal }}">{{ text_mention }}</a></span>-
        <span><a href="{{ terms_private }}">{{ text_condition }}</a></span>
        {#<span><a href="#">{{ text_copyright }}</a></span>#}
    </div>
</footer>
{% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
</body>
</html>