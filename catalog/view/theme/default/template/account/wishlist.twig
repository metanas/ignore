{{ header }}
<div id="account-wishlist" class="container">
    {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    {% endif %}
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">{{ content_top }}
            <h2 class="text-center">{{ heading_title }}</h2>
            {% if products %}
                <div class="product-container row">
                    {% for product in products %}
                        <div class="product-layout col-lg-3 col-md-3 col-sm-4 col-xs-6">
                            <span id="product-id" style="display: none">{{ product.product_id }}</span>
                            <a href="{{ product.href }}">
                                <div class="product-thumb transition">
                                    <div class="image">
                                        <img src="{{ product.thumb }}"
                                             alt="{{ product.name }}"
                                             title="{{ product.name }}"
                                             class="img-responsive"
                                        />
                                    </div>
                                    {% if product.stock %}
                                        <span class="product-status product-stock">
                                            Out of Stock
                                        </span>
                                    {% endif %}
                                    <div class="caption">
                                        <div class="desctip col-sm-12 col-xs-12">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 text-left">
                                                    <div class="text-left">
                                                        <a href="{{ product.href }}" class="text-capitalize"
                                                           style="font-weight: bold">{{ product.manufacturer }}</a>
                                                    </div>
                                                    <div class="ShoesName text-left">
                                                        <a href="{{ product.href }}">{{ product.name }}</a>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6 text-right">
                                                    <div {% if product.special %} class="price-old" {% endif %}>
                                                        {{ product.price }}
                                                    </div>
                                                    {% if product.special %}
                                                        <div class="price-new text-right">{{ product.special }}</div>
                                                    {% endif %}
                                                </div>
                                                <div class="col-sm-12 same">
                                                    {#<p>Disponible en plusieurs tailles</p>#}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <div><img src="{{ product.favorite }}" class="favorite"
                                      title="ajouter au favoris">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div align="center">
                    <img src="catalog/view/theme/default/image/owl.png" width="15"
                         style="margin-bottom: 20px;margin-top: 20px">
                </div>
                <p align="center" style="font-size: 18px">{{ text_no_results }}</p>
            {% endif %}
            {{ content_bottom }}</div>
        {{ column_right }}</div>
</div>
{{ footer }}
