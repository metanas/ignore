<div style="width:400px;  margin-left: auto; margin-right: auto; border-radius: 4px; padding-top: 5px; padding-bottom: 15px; padding-left: 25px; padding-right: 25px;">
    <table style="width:100%; font-size:16px; border:0;">
        <thead>
        <tr>
            <td style="text-align: center;  padding-top: 15px; padding-bottom: 15px;">
                {% if logo is empty %}
                    <a href="{{ store_url }}">{{ store }}</a>
                {% else %}
                    <a href="{{ store_url }}"><img src="{{ logo }}" alt="{{ store }}" title="{{ store }}"
                                                   style="margin-left: auto; margin-right: auto; width: 100px;"/></a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <td align="center">
                <span style="text-transform: uppercase;font-size: 25px"><b>Bienvenue chez {{ store }}</b></span>
            </td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td align="center"><img src="{{ image }}" alt="" style="margin-left: auto;margin-right: auto;width: 100%"></td>
        </tr>
        <tr>
            <td style="line-height: 1.8;">
                {% if not approval %}
                    <p>{{ text_login }}</p>
                    <p>
                        <br/>
                    </p>
                    <p style="text-align: center; font-weight: bold;"><a href="{{ login }}" style="border-radius:4px; color:#fff; text-decoration: none; background-color: #01b3e8; padding-left:18px; padding-right:18px; padding-top:10px; padding-bottom:10px; font-size:18px;">
                            {{ button_login }}
                        </a>
                    </p>
                    <p>
                        <br/>
                    </p>
                    <p>{{ text_service }}</p>
                {% else %}
                    {{ text_approval }}
                    {#<p style="text-align: center; font-weight: bold;"><a href="{{ login }}"#}
                                                                         {#style="border-radius:4px; color:#fff; text-decoration: none; background-color: #01b3e8; padding-left:18px; padding-right:18px; padding-top:10px; padding-bottom:10px; font-size:18px;">#}
                            {#{{ button_login }}#}
                        {#</a></p>#}
                    <p>
                        <br/>
                    </p>
                {% endif %}
                <p align="center">
                    {{ text_thanks }} <br/><strong>Votre Ã©quipe {{ store }}</strong>
                </p>
            </td>
        </tr>
        </tbody>
    </table>
</div>
